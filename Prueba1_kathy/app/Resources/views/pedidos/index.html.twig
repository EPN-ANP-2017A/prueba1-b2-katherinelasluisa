{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
    <h1>Pedidos list</h1>
            </div>
        <div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad</th>
                <th>Cliente</th>
                <th>Plato</th>
                <th>Unitario</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td><a href="{{ path('pedidos_show', { 'id': pedido.id }) }}">{{ pedido.id }}</a></td>
                <td>{{ pedido.cantidad }}</td>
                <td>{{ pedido.cliente.nombre }}</td>
                <td>{{ pedido.plato.nombre }}</td>
                <td></td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pedidos_show', { 'id': pedido.id }) }}" class="btn btn-sm btn-info">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pedidos_edit', { 'id': pedido.id }) }}" class="btn btn-sm btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pedidos_new') }}" class="btn btn-info">Create a new pedido</a>
        </li>
    </ul>
{% endblock %}
